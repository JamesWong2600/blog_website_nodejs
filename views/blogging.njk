<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Send Email</title>
     <link rel="stylesheet" href="/css/blog_page.css">
</head>
<body>
     <div id="gg"></div>



     <div class="blog-container">
        <div class="blog-content">
            <div class="compose-section">
                <h2><i class="fas fa-pen"></i> Post a new post</h2>
                <form action="/post_blog" method="POST" class="blog-form" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="blog_title">Subject:</label>
                        <input type="text" id="blog_title" name="blog_title" required>
                    </div>
                    <div class="form-group">
                        <label for="blog_content">Message:</label>
                        <textarea id="blog_content" name="blog_content" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="image">Add Image (optional)</label>
                        <input type="file" name="file" required>
                    </div>
                    <button type="submit" class="submit-btn">
                        <i class="fas fa-paper-plane"></i> post a blog
                    </button>
                </form>
            </div>
        </div>

    <script>
      async function submitForm() {
            const form = document.getElementById('blog-form');
            const formData = new FormData(form);

            // First action
            const response1 = await fetch('/post_blog', {
                method: 'POST',
                body: formData
            });

            if (response1.ok) {

                // Second action
                const response2 = await fetch('/blog', {
                    method: 'POST',
                    body: formData
                });

                if (response2.ok) {

                    window.location.href = '/blog'; // Redirect to /blog after both actions are completed
                } else {
                    console.error('Error in second action.');
                }
            } else {
                console.error('Error in first action.');
            }
        }
    </script>


        




</body>
</html>